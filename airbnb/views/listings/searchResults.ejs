<% layout("/layouts/boilerplate") %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-4 mt-5 search-result">


<% if (results) { %>
    
        <% results.forEach(result => { %>
            <a href="/listings/<%= result.id  %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= result.image.url %>" class="card-img-top" style="height: 20rem;" alt="blogimage">
                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= result.title %> </b><br>
                         &#8377; <%= result.price %> /night
                         <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                         </p>
                    </div>
                </div>
            </a>
        <% }) %>
    
<% } else { %>
</div>
    <p>No matching blogs found.</p>
<% } %>

